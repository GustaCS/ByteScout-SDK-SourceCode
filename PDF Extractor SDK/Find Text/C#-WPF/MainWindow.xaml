<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="538" Width="660">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="101*"/>
			<ColumnDefinition Width="62*"/>
		</Grid.ColumnDefinitions>
		<Button Content="Load PDF file" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="108" Height="28" Click="Button_Load"/>
		<TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="447" Margin="10,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="632" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
		<TextBox x:Name="textBoxFind" HorizontalAlignment="Left" Height="28" Margin="38,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
		<Button Content="Find text" HorizontalAlignment="Left" Margin="163,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.813,0.5" Height="28" Click="Button_Find" Grid.Column="1"/>
		<Button Content="Extract text" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="112" Height="28" Click="Button_Extract"/>

	</Grid>
</Window>
